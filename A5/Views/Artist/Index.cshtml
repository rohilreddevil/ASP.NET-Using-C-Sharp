@model IEnumerable<Assignment5.Models.ArtistBaseViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Artist List</h2>

<p>
    @Html.ActionLink("Create new artist", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Executive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UrlArtist)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthOrStartDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BirthName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Executive)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Genre)
    </td>
    <td>
        <img src="@item.UrlArtist" height="200" width="200" />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BirthOrStartDate)
    </td>
    <td>

        @Html.ActionLink("Details", "Details", new { id = item.Id }) 

    </td>
</tr>
}

</table>
