@model ASSIGNMENT_2.Models.PlaylistEditTracksFormViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Playlist  @Html.DisplayFor(model => model.Name)</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Select the tracks, and click the Save button</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PlaylistId)
        
        
    <div class="btn-group">
        <input type="submit" value="Save Changes" class="btn btn-default" />
        @Html.ActionLink("Back to Details", "Details", new { id = Model.PlaylistId }, new { @class = "btn btn-link" })
        @Html.ActionLink("Back to List", "Index", "", new { @class = "btn btn-link" })

    </div>
            
            <hr />
        <div class="row">

            <div class="col-md-6">

                <tr><th></th><th><b>All Tracks</b></th></tr>
                <hr />
                @foreach (var item in Model.TrackList)
                {
                    <p>
                        <input type="checkbox" name="TrackIds" value="@item.Value" checked="@item.Selected" />
                        @item.Text
                    </p>
                }

            </div>

            <div class="col-md-6 well">

                <h3>Now on Playlist <span class="badge badge-secondary"> @Html.DisplayFor(modelItem => Model.TracksCount) </span></h3>
                @foreach (var item in Model.Tracks)
                {
                    
                        
                        <p>
                            @item.NameDetailed
                        </p>
                    
                }

            </div>

        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
