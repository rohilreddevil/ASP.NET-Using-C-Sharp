@model ASSIGNMENT_2.Models.TrackWithDetailViewModel

@{
    ViewBag.Title = "Details";
}

    <h2>Details for Track# @Html.DisplayFor(model => model.TrackId)</h2>

<div>
    <h4>Track Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Track Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Composer
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Composer)
        </dd>

        <dt>
            Length(ms)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Milliseconds)
        </dd>

        <dt>
            Unit Price
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UnitPrice)
        </dd>

        <dt>
            Artist Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AlbumArtistName)
        </dd>

        <dt>
            Album Title
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AlbumTitle)
        </dd>
        <dt>
            Media Type
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MediaType.Name)
        </dd>
    </dl>
</div>
<p>
    
    @Html.ActionLink("Back to List", "Index")
</p>
