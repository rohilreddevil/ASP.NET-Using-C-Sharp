@model IEnumerable<ASSIGNMENT_2.Models.TrackWithDetailViewModel>

@{
    ViewBag.Title = "Index";
}

<h2><b><i>List of Awesome Tracks!!</i></b></h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Track Name
        </th>
        <th>
            Composer
        </th>
        <th>
            Length (ms)
        </th>
        <th>
            Unit Price
        </th>
        <th>
            Artist Name
        </th>
        <th>
            Album Title
        </th>
        <th>
            Media Type
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Composer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Milliseconds)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnitPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AlbumArtistName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AlbumTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MediaType.Name)
        </td>
        <td>
            
            @Html.ActionLink("Details", "Details", new { id=item.TrackId }) 
            
        </td>
    </tr>
}

</table>
